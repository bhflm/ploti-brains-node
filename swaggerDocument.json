{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Ploti API",
    "description": "Documentation for marketplace endpoints",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "localhost:8080",
  "basePath": "/api",
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/status":{
      "get":{
          "summary": "Checks for app status",
          "produces": [
            "application/json"
          ],
          "responses": {
            "200": {
              "description": "App is running"
            }
          }
        }
      },

    "/users": {
      "post": {
        "tags": [
          "Users"
        ],
        "summary": "Create new user",
        "parameters": [
          {
            "name": "email",
            "in": "body",
            "description": "Email of the User that we want to create",
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          {
            "name": "name",
            "in": "body",
            "description": "name of User that we want to create",
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          {
            "name": "lastname",
            "in": "body",
            "description": "last name from User that we want to create",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "201": {
            "description": "New user is created",
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "400":{
            "description": "Not valid params"
          }
        }
      }
    },

    "/users/login": {
      "parameters": [
        {
          "name": "email",
          "in": "body",
          "required": true,
          "description": "Email of User that we want to log",
          "type": "string"
        },
        {
          "name": "password",
          "in": "body",
          "required": true,
          "description": "Password of User that we want to log",
          "type": "string"
        }
      ],
      "post":{
        "tags": [
          "Users"
        ],
        "summary": "log into corresponding user account",
        "responses": {
          "200":{
            "description": "Success log in!",
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "400":{
            "description": "Not valid parameters. Check for user credentials"
          }
        }
      }
    },

    "/sellers": {
      "post": {
        "tags": [
          "sellers"
        ],
        "summary": "Create new company",
        "parameters": [
          {
            "name": "name",
            "in": "body",
            "description": "Name of the Company we want to create",
            "schema": {
              "$ref": "#/definitions/Company"
            }
          },
          {
            "name": "email",
            "in": "body",
            "description": "Email of the Company we want to create",
            "schema": {
              "$ref": "#/definitions/Company"
            }
          },
          {
            "name": "password",
            "in": "body",
            "description": "Password of the Company we want to create",
            "schema": {
              "$ref": "#/definitions/Company"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "201": {
            "description": "New Company is created"
          },
          "400":{
            "description": "Not valid parameters"
          }
        }
      }
    },

    "/sellers/login": {
      "parameters": [
        {
          "name": "email",
          "in": "body",
          "required": true,
          "description": "ID of the company to log in",
          "type": "string"
        },
        {
          "name": "password",
          "in": "body",
          "required": true,
          "description": "Password of company that we want to log in",
          "type": "string"
        }
      ],
      "post":{
        "tags": [
          "sellers"
        ],
        "summary": "Log into corresponding company account",
        "responses": {
          "200":{
            "description": "Success log in!"
          },
          "400":{
            "description": "Not valid parameters, check for given credentials"
          }
        }
      }
    },

  },
  "definitions": {
    "User": {
      "required": [
        "lastname",
        "name",
        "password",
        "email",
        "_id"
      ],
      "properties": {
        "_id": {
          "type": "string",
          "uniqueItems": true
        },
        "email": {
          "type": "string",
          "uniqueItems": true
        },
        "lastname": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "Company": {
      "required": [
        "id",
        "name",
        "email",
        "password"
      ],
      "properties": {
        "id": {
          "type": "Integer",
          "uniqueItems": true
        },
        "email": {
          "type": "string",
          "uniqueItems": true
        },
        "name": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    }
  }
}
